@model ProfileEditViewModel

<form method="post" id="user-form">
    <div class="row">
        <div class="col-lg-6 col-12 mb--30">
            <input asp-for="FullName" id="first-name" placeholder="Full Name" type="text">
            <span class="text-danger" asp-validation-for="FullName"></span>
        </div>
        <div class="col-12 mb--30">
            <input asp-for="UserName" id="display-name" placeholder="User Name" type="text">
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>
        <div class="col-12 mb--30">
            <input asp-for="Email" id="email" placeholder="Email Address" type="email">
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="col-12 mb--30">
            <h4>Password change</h4>
        </div>
        <div class="col-12 mb--30">
            <input asp-for="CurrentPassword" id="current-pwd" placeholder="Current Password" type="password">
            <span class="text-danger" asp-validation-for="CurrentPassword"></span>
        </div>
        <div class="col-lg-6 col-12 mb--30">
            <input asp-for="NewPassword" id="new-pwd" placeholder="New Password" type="password">
            <span class="text-danger" asp-validation-for="NewPassword"></span>
        </div>
        <div class="col-lg-6 col-12 mb--30">
            <input asp-for="ConfirmNewPassword" id="confirm-pwd" placeholder="Confirm Password" type="password">
            <span class="text-danger" asp-validation-for="ConfirmNewPassword"></span>
        </div>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="col-12">
            <button type="submit" class="btn btn--primary savechg">Save Changes</button>
        </div>
    </div>
</form>

<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="toast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <strong class="me-auto">Notification</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
            @if (TempData["ToastMessage"] != null)
            {
                <span>@TempData["ToastMessage"]</span>
            }
        </div>
    </div>
</div>
